@model FoodListViewModel;


<div>
    <h2>@Model.CurrentCategory<h2/>
</div>

<p>
    <a asp-action="Create">Create New</a>
</p>


<div class="container">
    <div class="row">
        @foreach (var food in Model.Foods)
        {
            <div class="col-sm-4 col-md-4 col-lg-4">
                <p><img src="@food.ImageUrl" class="img-fluid"></p>
                <h3>Price: @food.Value.ToString("c")</h3>
                <h4>@food.FoodName</h4>      
                <p>@food.ShortDescription</p>
            </div>
        }
    </div>
</div>