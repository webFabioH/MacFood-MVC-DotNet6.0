@model Food

<div class="container">
    <div class="row">
        <div class="card">
            <div class="text-center">
                <img src="@Model.ImageUrl" class="img-fluid" alt="">
            </div>
            <div class="card-block">
                <h2 class="card-title">@Model.FoodName</h2>
                <p class="card-text"><h5>@Model.DetailedDescription</h5></p>
                <p class="btn btn-group align-content-lg-end">
                    <a asp-controller="Food" asp-action="List"
                       class="btn btn-outline-info">Show all foods</a>
                    <a class="btn btn-primary" id="cartButton" asp-controller="PurchaseCart"
                       asp-action="AddToCart" asp-route-lancheId="@Model.FoodId">
                        Add @Model.FoodName to the cart
                    </a>
                </p>
            </div>
        </div>
    </div>
</div>