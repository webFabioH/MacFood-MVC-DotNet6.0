@model Order

<div class="container">
    <div class="jumbotron">
        <h2>@ViewBag.CheckoutCompleteMessage</h2>
    </div>

    <div class="card">
        <div class="card-body">
            <p>Costumer : <strong>@Model.Name</strong></p>
            <p>Order date : <strong>@Model.DeliveredOrderIn</strong></p>
            <p>Order Id : <strong>@Model.OrderId</strong></p>

            <table class="table">
                <tr>
                    <th></th>
                    <th>Quantity</th>
                    <th>Food</th>
                    <th>Price</th>
                </tr>
                @foreach (var item in Model.OrderItens)
                {
                    <tr>
                        <td><img src="@item.Food.ImageUrl" width="40" height="40" /></td>
                        <td>@item.Quantity</td>
                        <td>@item.Food.FoodName</td>
                        <td>@item.Food.Value</td>
                    </tr>
                }
            </table>

            <h4>Total Order : <strong>@(((decimal)ViewBag.TotalOrder).ToString("C2"))</strong></h4>

        </div>
    </div>
</div>

<div class="form-group" style="text-align :center">
    <h3>
        <a class="nav-link text-info" asp-controller="Home" asp-action="Index">Return</a>
    </h3>
</div>
