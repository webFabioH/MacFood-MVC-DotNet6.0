@model Food

<div class="col-sm-4 col-md-4 col-lg-4">
    <p><img src="@Model.ImageUrl" class="img-fluid"></p>
    <h3>Price: @Model.Value.ToString("c")</h3>
    <h4><a asp-controller="Food" asp-action="Details" asp-route-foodId="@Model.FoodId">@Model.FoodName</a></h4>
    <p>@Model.ShortDescription</p>

    <div> 
        <p class="btn btn-primary" id="cartButton" asp-controller="PurchaseCart" asp-action="AddToPurchaseCart"
           asp-route-foodId="@Model.FoodId">
            Add in the cart
        </p>
    </div>
</div>
